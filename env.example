# バックエンド設定
BACKEND_PORT=5050

# Claude API設定（必須）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# WordPress設定（記事投稿用）
WORDPRESS_URL=https://genaicatalogue.com
WORDPRESS_USERNAME=your_username
WORDPRESS_PASSWORD=your_application_password

# データベース設定（本番環境用）
