{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "name": "Python: Article Generator",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/generate_article.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        "--url",
        "https://elevenlabs.io",
        "--keyword",
        "ElevenLabs review 2025"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: WordPress Publisher",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/deploy_to_wordpress.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
} 